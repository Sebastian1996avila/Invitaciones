<script src="https://cdn.jsdelivr.net/npm/particles.js"></script>

<script>
    // Código para el funcionamiento de las pestañas
    const tabs = document.querySelectorAll('.nav-tab');
    const sliders = document.querySelectorAll('.slider');

    tabs.forEach(tab => {
        tab.addEventListener('click', (e) => {
            e.preventDefault();

            // Eliminar la clase activa de todas las secciones
            sliders.forEach(slider => {
                slider.classList.remove('active');
            });

            // Mostrar la sección correspondiente
            const target = document.querySelector(tab.getAttribute('href'));
            target.classList.add('active');

            // Desplazar la barra de navegación
            const sliderPosition = tab.offsetLeft;
            document.querySelector('.nav-tab-slider').style.transform = `translateX(${sliderPosition}px)`;
        });
    });

    // Inicializa mostrando la primera sección
    document.querySelector('.nav-tab').click();

    // Inicialización de las partículas
    Particles.init({
        selector: '.background',
        color: ['#ff5722', '#e91e63', '#9c27b0'],
        connectParticles: true,
        maxParticles: 150,
        sizeVariations: 3,
        speed: 0.5,
        responsive: [
            {
                breakpoint: 768,
                options: {
                    color: ['#ff5722', '#e91e63'],
                    maxParticles: 60,
                    connectParticles: false
                }
            }
        ]
    });
</script>
<script src="script.js"></script>
