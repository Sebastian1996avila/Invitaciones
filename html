<script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
<script>
    // Funci√≥n para mover el carrusel
    let currentSlide = 0;
    const slides = document.querySelectorAll('.carousel-image');
    const totalSlides = slides.length;

    function moveCarousel(direction) {
        currentSlide += direction;
        if (currentSlide < 0) currentSlide = totalSlides - 1;
        if (currentSlide >= totalSlides) currentSlide = 0;
        document.querySelector('.carousel-container').style.transform = `translateX(-${currentSlide * 100}%)`;
    }
</script>
<script>
    // C√≥digo para el funcionamiento de las pesta√±as
    const tabs = document.querySelectorAll('.nav-tab');
    const sliders = document.querySelectorAll('.slider');

    tabs.forEach(tab => {
        tab.addEventListener('click', (e) => {
            e.preventDefault();

            // Eliminar la clase activa de todas las secciones
            sliders.forEach(slider => {
                slider.classList.remove('active');
            });

            // Mostrar la secci√≥n correspondiente
            const target = document.querySelector(tab.getAttribute('href'));
            target.classList.add('active');

            // Desplazar la barra de navegaci√≥n
            const sliderPosition = tab.offsetLeft;
            document.querySelector('.nav-tab-slider').style.transform = `translateX(${sliderPosition}px)`;
         
               
       
        });
    });

    // Inicializa mostrando la primera secci√≥n
    document.querySelector('.nav-tab').click();

    // Inicializaci√≥n de las part√≠culas
    Particles.init({
        selector: '.background',
        color: ['#ff5722', '#e91e63', '#9c27b0'],
        connectParticles: true,
        maxParticles: 150,
        sizeVariations: 3,
        speed: 0.5,
        responsive: [
            {
                breakpoint: 768,
                options: {
                    color: ['#ff5722', '#e91e63'],
                    maxParticles: 60,
                    connectParticles: false
                }
            }
        ]
    });
</script>
